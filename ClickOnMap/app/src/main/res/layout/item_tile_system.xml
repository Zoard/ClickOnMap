<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="40dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tile_border" />

    <RelativeLayout
        android:id="@+id/tile_system_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <com.example.zoardgeocze.clickonmap.Design.AvenirBookTextView
            android:id="@+id/tile_system_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="22sp" />

        <com.example.zoardgeocze.clickonmap.Design.AvenirBookTextView
            android:id="@+id/tile_system_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tile_system_name"
            android:layout_margin="20dp"
            android:textSize="12sp" />

    </RelativeLayout>



</android.support.v7.widget.CardView>