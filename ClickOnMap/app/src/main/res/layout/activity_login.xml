<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_img"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageButton
        android:id="@+id/login_back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/back_btn"
        android:layout_margin="20dp"
        android:onClick="backToMenu"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/clickonmap_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_back_btn"
        android:layout_marginBottom="30dp"/>

    <com.example.zoardgeocze.clickonmap.Design.AvenirLightTextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/username_icon"
        android:layout_alignTop="@+id/login_user"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:id="@+id/login_user_icon" />

    <com.example.zoardgeocze.clickonmap.Design.AvenirBookEditText
        android:id="@+id/login_user"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/login_title"
        android:hint="Usuário"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:inputType="textEmailAddress"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/password_icon"
        android:layout_below="@+id/login_user"
        android:layout_alignStart="@+id/login_user_icon" />

    <com.example.zoardgeocze.clickonmap.Design.AvenirBookEditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/login_user"
        android:hint="Senha"
        android:textColorHint="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/login_password"
        android:background="@drawable/login_btn"
        android:onClick="verifyUser"
        android:layout_marginBottom="20dp"/>

    <com.example.zoardgeocze.clickonmap.Design.AvenirBookTextView
        android:id="@+id/login_register_ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:text="Não possui Cadastro?"
        android:textColor="#D8D8D8" />

    <com.example.zoardgeocze.clickonmap.Design.AvenirBookTextView
        android:id="@+id/login_register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/login_register_ask"
        android:layout_below="@+id/login_btn"
        android:text="Cadastre-se"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="frontToRegister" />

    <com.example.zoardgeocze.clickonmap.Design.AvenirBookTextView
        android:id="@+id/login_or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/login_register_btn"
        android:layout_below="@+id/login_btn"
        android:layout_marginLeft="10dp"
        android:text="ou"
        android:textColor="#FFFFFF"/>

    <ImageButton
        android:id="@+id/login_facebook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/facebook_icon"
        android:backgroundTint="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/login_btn"
        android:layout_toRightOf="@+id/login_or_text"/>

</RelativeLayout>