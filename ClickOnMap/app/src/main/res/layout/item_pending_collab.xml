<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tile_border" />

    <RelativeLayout
        android:id="@+id/pending_collab_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <com.example.zoardgeocze.clickonmap.Design.AvenirBookTextView
            android:id="@+id/pending_collab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"/>

        <com.example.zoardgeocze.clickonmap.Design.AvenirBookTextView
            android:id="@+id/pending_collab_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:layout_below="@+id/pending_collab_title"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>